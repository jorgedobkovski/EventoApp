
<MudItem sm="12" md="6" lg="4">
    <MudCard>
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudAvatar Color="Color.Secondary">@Evento.Name?.Substring(0,1).ToUpper()</MudAvatar>
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.body1">@Evento.Name</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardMedia Image="@Evento.Image" Height="250" />
        <MudCardContent>
            <MudText><b>Este é um componente parametrizado.</b></MudText>
            <MudText Typo="Typo.body2">@Evento.Description</MudText>
            <MudText Typo="Typo.body2">@Evento.Inicio</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudIconButton Icon="@Icons.Filled.EventAvailable" Color="Color.Default" />
            <MudIconButton Icon="@Icons.Filled.ConfirmationNumber" Color="Color.Default" />
            <MudIconButton Icon="@Icons.Material.Filled.Share" Color="Color.Default" />
        </MudCardActions>
    </MudCard>
</MudItem>

@code {
    [Parameter]
    public Evento? Evento { get; set; }


}
